@model AgentPortal.ViewModels.Agent.AgentViewModel

<h2>Agent Entry Form</h2>

<form method="post" action="/home/AgentEntryForm">

    <div><label>Agent Code</label><input type="text" name="AgentCode" value="@Model.Agent.AgentCode" /></div>
    <div><label>Agent Name</label><input type="text" name="AgentName" value="@Model.Agent.AgentName" /></div>
    <div><label>Phone Number</label><input type="number" name="PhoneNumber" value="@Model.Agent.PhoneNumber" /></div>
    <div><label>Working Area</label><input type="text" name="WorkingArea" value="@Model.Agent.WorkingArea" /></div>
    <div><label>Commission</label><input type="number" min="0" step="any" name="Commission" value="@Model.Agent.Commission" /></div>
    <button type="submit">Save</button>

</form>



